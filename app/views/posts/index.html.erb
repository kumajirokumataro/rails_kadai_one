<h1>つぶやき一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>更新日</th>
    <th>内容</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.updated_at %></td>
    <td><%= post.content %></td>

    <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
    <td><%= link_to "つぶやきを編集する", edit_post_path(post.id) %></td>
    <td><%= link_to 'つぶやきを削除する', post_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
  </tr>
<% end %>
</table>

